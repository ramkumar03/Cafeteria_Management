<main class="UsersNewPage">
<p class="UsersNew-Title">Sign input</p>

<section class="UsersForm">
	<%= form_with(url: sessions_path) do |form| %>

		<div class="UsersForm-section">
				<p>Email:</p>
		<%= form.email_field :email, class: "UsersForm-input" %>
		</div>

		<div class="UsersForm-section">
			<p>Password:</p>
			<%= form.password_field :password, class: "UsersForm-input" %>
		</div>

		<div class="UsersForm-section">
		  <%= form.submit "Sign In", class: "UsersForm-Submit" %>
		</div>
	<% end %>
</section>

</main>
