<main class="UsersNewPage">
	<div class="UsersNew-Title">Sign in
		<%= link_to "Home", "/",
              class: "UsersForm-home" %>
	</div>


	<section class="UsersForm">
		<%= form_with(url: sessions_path) do |form| %>

			<div class="UsersForm-section">
					<p>Email:</p>
			<%= form.email_field :email, required: true, class: "UsersForm-input" %>
			</div>

			<div class="UsersForm-section">
				<p>Password:</p>
				<%= form.password_field :password, required: true, class: "UsersForm-input" %>
			</div>

			<div class="UsersForm-section">
				<%= form.submit "Sign In", class: "UsersForm-Submit" %>
			</div>
		<% end %>
	</section>

</main>
